<div class="container p-2">
  <div class="d-flex justify-content-between">
    <h2> My lists </h2>
    <%= link_to "Add a new list", new_list_path, class:"btn btn-dark m-2" %>
  </div>

  <div class="d-flex my-3">
    <% @lists.each do |list| %>
      <div
      class="card-category"
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
      url('<%= cl_image_path list.photo.key, crop: :fill %>')"
        >
        <%=
          link_to list.name, list_path(list),
          class:"text-decoration-none text-light p-3 m-2"
          %>
      </div>

    <% end %>
  </div>
</div>
