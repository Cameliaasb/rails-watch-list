<div class="container">
  <div class="d-flex justify-content-between my-3">
    <h2><%= @list.name %></h2>
    <%= link_to lists_path do %>
      <i class="fa-solid fa-house text-dark"></i>
    <% end %>
  </div>



  <div class="d-flex my-3">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="text-decoration-none bg-light border border-dark p-3 text-dark m-2">
        <strong>  <h3> <%= bookmark.movie.title %> </h3> </strong>
        <p> <%= bookmark.movie.overview %> </p>
        <div class="d-flex justify-content-between align-items-center">
          <p> <%= bookmark.comment %> </p>
          <p> <%= bookmark.movie.rating %> </p>
        </div>
        <div>
          <%= link_to "Delete", bookmark_path(bookmark),
           data: {turbo_method: :delete}
          %>
        </div>
      </div>
    <% end %>
  </div>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.button :submit, class:"btn btn-dark" %>
  <% end %>

</div>
